script/source = "extends Control

@onready var animationPlayer: AnimationPlayer = $AnimationPlayer
var player_info: PlayerInfo

@export var upgrade_boxes: Array[Node]
var possible_upgrades: Array[Upgrade]

var dir_path = \"res://scripts/resources/upgrades/permanent/\"
func _ready() -> void :
	for file_path in DirAccess.get_files_at(\"res://scripts/resources/upgrades/permanent/\"): 
		if file_path.get_extension() == \"tres\":  
			possible_upgrades.append( load(dir_path+file_path) )
	for button in upgrade_boxes:
		button.connect(\"select_upgrade\",finish_level_up)
	
func _on_visibility_changed() -> void:
	if animationPlayer != null:
		if visible == true :
			randomize_all_upgrade()
			upgrade_boxes[0].get_child(0).grab_focus()
			animationPlayer.play(\"show_menu\")
		else : 
			animationPlayer.play(\"hide_menu\")

func get_one_random_upgrade():
	var index = randi() % possible_upgrades.size()
	return possible_upgrades[index]

func randomize_all_upgrade():
	var new_upgrade_array = []
	for new_upgrade_index in range(0,upgrade_boxes.size()):
		var new_upgrade = get_one_random_upgrade()
		while new_upgrade_array.has(new_upgrade):
			new_upgrade = get_one_random_upgrade()
		new_upgrade_array.append(new_upgrade)
		upgrade_boxes[new_upgrade_index].upgrade = new_upgrade
	pass

func finish_level_up(upgrade: Upgrade):
	Signals.upgrade_selected.emit(player_info,upgrade)
"

